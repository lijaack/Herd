	<script src="/js/newevent.js" type="text/javascript"></script>

<div class="container">


    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-md-6 col-md-offset-3">
            <div class="card event-content">
            <h3>Create a New Event</h3>

            <form id="newEventForm" data-name="{{community.name}}" data-id="{{community.id}}" class="needs-validation" novalidate>

                <div class="form-group">
                    <label for="name">Event Name:</label>
                    <input placeholder="Movie Night & Potluck" type="text" class="form-control" id="name" required>
                    <br />
                    <label for="date">Date:</label>
                    <input placeholder="February 11, 2019 20:00:00" type="text" class="form-control" id="date" required>
                    <br />
                    <label for="description">Event Description:</label>
                    <textarea placeholder="We'll vote on a movie. Everyone bring something to share." class="form-control" rows="4" id="description" required></textarea>
                    <br />
                    <label for="max-attendees">Max Attendees:</label>
                    <input placeholder="30" type="number" class="form-control" id="max-attendees" required>
                    <br />
                    <button type="submit" class="btn btn-success submit">Submit</button>
                </div>
            </form>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>