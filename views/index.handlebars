<div class="container-fluid">
    <div class="row">
        <header>
            <img class="logo" src="../img/HERD.png">
            <br>
            <div><h2 class="lead" id="lead-main"> Join the event</h2> </div>
            <div><h2 class="lead" id="lead-sub">Create your community</h2> </div>
            <div id="sign-up"><a href="/api/createuser" class="btn btn-primary">Sign Up</a></div>
        </header>
    </div>
    <div class="row" id="events-row">
        <div class="container">
            <h2 class="row-title">Top Events</h2> 
            <div class="row" >
                    {{#each communities}}
                    {{#each Events}}
                        <div class="col col-lg-4">
                            <div class="card">
                                {{!-- <img class="card-img-top" src="..." alt="Card image cap"> --}}
                                <div class="color-spacer event-spacer"></div>
                                <div class="card-body">
                                    <h5 class="card-title">{{name}}</h5>
                                    <p class="card-text">{{description}}</p>
                                    <p class="card-text">{{date}}</p>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                    {{/each}}
            </div>
        </div>
    </div>
    <div class="row" id="communities-row">
        <div class="container">
            <div class="row">
                <h2 class="row-title">Popular Communities  </h2>
                <a href="/api/community/new">create community</a>
            </div>
            <div class="row" >
                {{#each communities}}
                    <div class="col col-lg-4">
                        <div class="card">
                            {{!-- <img class="card-img-top" src="..." alt="Card image cap"> --}}
                            <div class="color-spacer community-spacer"></div>
                            <div class="card-body">
                                <h5 class="card-title">{{name}}</h5>
                                <p class="card-text">{{description}}</p>
                                <div id="visit-community"><a href="/community/{{name}}?communityId={{id}}" class="btn btn-primary">Visit</a></div>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

