<script src="/js/signup.js" type="text/javascript"></script>

<div class="container">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-md-6 col-md-offset-3">
        <div class="card event-content">
        <div class="login-form needs-validation">
            <h3>Sign up Form</h3>
            <form id="signup" novalidate>
         
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input placeholder="Username" type="text" class="form-control" id="username" pattern="[A-Za-z0-9@]{6,20}" required>
                    <div class="invalid-feedback">
                    Please provide a username with a combination of 6 to 20 letters and numbers.
                    </div>
                    <br />
                    <label for="password">Password:</label>
                    <input placeholder="Password" type="password" class="form-control" id="password" pattern="[A-Za-z0-9]{6,12}" required>
                    <div class="invalid-feedback">
                    Please provide a password with a combination of 6 to 12 letters and numbers.
                    </div>
                    <br />
                    <label for="name">Name:</label>
                     <input placeholder="Name" type="text" class="form-control" id="name" pattern="[A-Za-z]{2,30}" required>
                    <div class="invalid-feedback">
                    Invalid name.
                    </div>
                    <br />
                    <button type="submit" class="btn btn-success submit">Sign up</button>
                </div>
            </form>
        </div>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>